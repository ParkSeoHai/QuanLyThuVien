
@model InfoBook
@{
    ViewData["Title"] = "ViewEdit";
}

<main>
    <form method="post" asp-controller="QuanLySach" asp-action="EditPost" style="width: 50%;">
        <fieldset>
            <legend>Sửa thông tin sách</legend>
            <input asp-for="Sach.ID_Sach" type="text" class="form-control" id="Sach.ID_Sach" hidden>
            <div class="form-group">
                <label asp-for="Sach.TenSach" class="form-label mt-4">Tên sách</label>
                <input asp-for="Sach.TenSach" type="text" class="form-control" required placeholder="Nhập tên sách">
            </div>
            <div class="form-group">
                <label asp-for="TacGia.TenTacGia" class="form-label mt-4">Tên tác giả</label>
                <input asp-for="TacGia.TenTacGia" type="text" class="form-control" required placeholder="Nhập tên tác giả">
            </div>
            <div class="form-group">
                <label asp-for="TacGia.QuocGia" class="form-label mt-4">Quốc gia</label>
                <input asp-for="TacGia.QuocGia" type="text" class="form-control" required placeholder="Nhập quốc gia">
            </div>
            <div class="form-group">
                <label asp-for="TheLoai.ID_TheLoai" class="form-label mt-4">Lựa chọn thể loại</label>
                <select asp-for="TheLoai.ID_TheLoai" asp-items="Model.TheLoaiSelectList" class="form-select">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Sach.NgayNhap" class="form-label mt-4">Ngày nhập</label>
                <input asp-for="Sach.NgayNhap" type="datetime-local" required class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Sach.GiaTien" class="form-label mt-4">Đơn giá sách</label>
                <input asp-for=Sach.GiaTien type="text" class="form-control" required placeholder="Nhập đơn giá">
            </div>
            <div class="form-group">
                <label asp-for="Sach.SoLuong" class="form-label mt-4">Số lượng sách</label>
                <input asp-for=Sach.SoLuong type="text" class="form-control" required placeholder="Nhập số lượng">
            </div>
            <div class="form-group">
                <label asp-for="Sach.UrlImg" class="form-label mt-4">Đường dẫn ảnh</label>
                <input asp-for="Sach.UrlImg" class="form-control" required type="text" placeholder="Nhập đường dẫn ảnh">
            </div>
            <div class="mt-3">
                <a asp-controller="QuanLySach" asp-action="Index" class="btn btn-outline-primary" style="margin-right: 4px">Quay lại</a>
                <button type="submit" class="btn btn-success">
                    Update
                </button>
            </div>
        </fieldset>
    </form>
</main>