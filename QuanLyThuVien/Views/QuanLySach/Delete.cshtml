@model InfoBook
@{
    ViewData["Title"] = "Delete";
}

<main>
    <form method="post" asp-controller="QuanLySach" asp-action="DeletePost" id="form-delete" style="width: 50%;">
        <fieldset>
            <legend>Xóa thông tin sách</legend>
            <input asp-for="Sach.ID_Sach" type="text" class="form-control" name="id" id="Sach.ID_Sach" hidden>
            <div class="form-group">
                <label asp-for="Sach.TenSach" class="form-label mt-4">Tên sách</label>
                <input asp-for="Sach.TenSach" type="text" class="form-control" id="Sach.TenSach" disabled="">
            </div>
            <div class="form-group">
                <label asp-for="TacGia.TenTacGia" class="form-label mt-4">Tên tác giả</label>
                <input asp-for="TacGia.TenTacGia" type="text" class="form-control" id="TacGia.TenTacGia" disabled="">
            </div>
            <div class="form-group">
                <label asp-for="TacGia.QuocGia" class="form-label mt-4">Quốc gia</label>
                <input asp-for="TacGia.QuocGia" type="text" class="form-control" id="TacGia.QuocGia" disabled="">
            </div>
            <div class="form-group">
                <label for="TenTheLoai" class="form-label mt-4">Tên thể loại</label>
                <input asp-for="TheLoai.TenTheLoai" class="form-control mt-4" id="TenTheLoai" disabled="" />
            </div>
            <div class="form-group">
                <label asp-for="Sach.NgayNhap" class="form-label mt-4">Ngày nhập</label>
                <input asp-for="Sach.NgayNhap" type="datetime-local" class="form-control" id="Sach.NgayNhap" disabled="">
            </div>
            <div class="form-group">
                <label asp-for="Sach.GiaTien" class="form-label mt-4">Đơn giá sách</label>
                <input asp-for="Sach.GiaTien" type="text" class="form-control" id="Sach.GiaTien" disabled="">
            </div>
            <div class="form-group">
                <label asp-for="Sach.SoLuong" class="form-label mt-4">Số lượng sách</label>
                <input asp-for="Sach.SoLuong" type="text" class="form-control" id="Sach.SoLuong" disabled="">
            </div>
            <div class="mt-3">
                <a asp-controller="QuanLySach" asp-action="Index" class="btn btn-outline-primary" style="margin-right: 4px">Quay lại</a>
                <button type="button" class="btn btn-danger" onclick="handleSubmitForm()">
                    Delete
                </button>
            </div>
        </fieldset>
    </form>

    <div class="modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Thông báo</h5>
                    <button type="button" class="btn-close" value="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true"></span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc chắn muốn xóa?</p>
                </div>
                <div class="modal-footer">
                    <button type="submit" value="submit" class="btn btn-danger">Yes</button>
                    <button type="button" class="btn btn-secondary" value="close" data-bs-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>
</main>
