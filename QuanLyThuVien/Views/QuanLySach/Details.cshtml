
@model InfoBook
@{
    ViewData["Title"] = "Details";
}

<main style="display:flex; align-items:center;">
    <form style="width: 50%;">
        <fieldset>
            <legend>Thông tin chi tiết sách mã số @Model.Sach.ID_Sach</legend>
            <div class="form-group">
                <label class="form-label mt-4">Tên sách</label>
                <input asp-for="Sach.TenSach" type="text" class="form-control" id="TenSach" disabled="">
            </div>
            <div class="form-group">
                <label class="form-label mt-4">Tên tác giả</label>
                <input asp-for="@Model.TenTacGia" type="text" class="form-control" id="TenTacGia" disabled="">
            </div>
            <div class="form-group">
                <label class="form-label mt-4">Tên thể loại</label>
                <input asp-for="@Model.TenTheLoai" type="text" class="form-control" id="TenTheLoai" disabled="" />
            </div>
            <div class="form-group">
                <label class="form-label mt-4">Ngày nhập</label>
                <input asp-for="Sach.NgayNhap" type="text" class="form-control" id="NgayNhap" disabled="">
            </div>
            <div class="form-group">
                <label class="form-label mt-4">Đơn giá sách</label>
                <input asp-for="Sach.GiaTien" type="text" class="form-control" id="GiaTien" disabled="">
            </div>
            <div class="form-group">
                <label class="form-label mt-4">Số lượng sách</label>
                <input asp-for=Sach.SoLuong type="text" class="form-control" id="SoLuong" disabled="">
            </div>
            <div class="mt-3">
                <a asp-controller="QuanLySach" asp-action="Index" class="btn btn-outline-primary" style="margin-right: 4px">Quay lại</a>
            </div>
        </fieldset>
    </form>
    <div class="ms-5">
        <img src="@Model.Sach.UrlImg" width="500px" height="500px" style="object-fit:contain;" alt="@Model.Sach.TenSach" />
    </div>
</main>