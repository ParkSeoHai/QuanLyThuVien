@model SachMuon
@{
    ViewData["Title"] = "Delete";
}

<main>
    <form method="post" asp-controller="QuanLyMuonTraSach" asp-action="DeletePost" id="form-delete" style="width:50%;">
        <fieldset>
            <legend>Xóa phiếu mượn</legend>
            <div class="form-grop">
                <input asp-for="MaPhieuMuon" type="text" class="form-control" name="maPhieuMuon" hidden>
            </div>
            <div class="form-group d-flex align-items-end">
                <div style="flex:auto; margin-right: 12px;">
                    <label asp-for="MaTheThuVien" class="form-label mt-4">Mã thẻ thư viện <span class="text-danger">*</span></label>
                    <input asp-for="MaTheThuVien" type="text" class="form-control" disabled="" />
                </div>
                <div style="flex:auto;">
                    <label asp-for="MaSach" class="form-label mt-4">Mã sách <span class="text-danger">*</span></label>
                    <input asp-for="MaSach" type="text" name="maSach" class="form-control" disabled="" />
                </div>
            </div>
            <div class="form-group d-flex align-items-end">
                <div style="flex:auto; margin-right: 12px;">
                    <label asp-for="NgayTaoPhieu" class="form-label mt-4">Ngày mượn <span class="text-danger">*</span></label>
                    <input asp-for="NgayTaoPhieu" type="date" class="form-control" disabled="" />
                </div>
                <div style="flex:auto;">
                    <label asp-for="NgayHenTra" class="form-label mt-4">Ngày hẹn trả <span class="text-danger">*</span></label>
                    <input asp-for="NgayHenTra" type="date" class="form-control" disabled="" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="SoLuongMuon" class="form-label mt-4">Số lượng mượn</label>
                <input asp-for="SoLuongMuon" type="number" class="form-control" disabled="" />
            </div>
            <div class="form-group">
                <label asp-for="GhiChuMuon" class="form-label mt-4">Ghi chú</label>
                <input asp-for="GhiChuMuon" type="text" class="form-control" disabled="" />
            </div>
        </fieldset>

        <fieldset style="position:absolute; bottom:0;">
            <a asp-controller="QuanLyMuonTraSach" asp-action="ViewSachMuon" class="btn btn-outline-primary" style="margin-right: 4px">Quay lại</a>
            <button type="button" class="btn btn-danger" onclick="handleSubmitForm()">Delete</button>
        </fieldset>
    </form>

    <div class="modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Thông báo</h5>
                    <button type="button" class="btn-close" value="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true"></span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc chắn muốn xóa?</p>
                </div>
                <div class="modal-footer">
                    <button type="submit" value="submit" class="btn btn-danger">Yes</button>
                    <button type="button" class="btn btn-secondary" value="close" data-bs-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>
</main>