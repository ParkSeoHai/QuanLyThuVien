@using QuanLyThuVien.Controllers;

@{
    var data = LoginController.layout;
}

@* Hàm kiểm tra và add class active khi click sidebar-link *@
@{
    string isActive(string controller, string action)
    {
        var result = Context.Request.Path == $"/{controller}" ? "active"
                    : Context.Request.Path == $"/{controller}/{action}" ? "active"
                    : "";
        return result;
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuanLyThuVien</title>
    <link rel="stylesheet" href="~/css/bootswatch_flatly.css" />
    <link rel="stylesheet" href="~/css/Home.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
    <input type="checkbox" id="nav-toggle">
    <div class="sidebar" target="_sidebar">
        <div class="sidebar-brand">
            <a asp-controller="Home" asp-action="Index">
                <h2 class="lv2">
                    <img src="~/Images/logo/logo-svg.webp" class="logo" />
                    <span>EAUT Libary</span>
                </h2>
            </a>
        </div>
        <div class="sidebar-menu">
            <ul>
                <li>
                    <a asp-controller="Home" asp-action="Index" title="Dasboard" class="sidebar-link @isActive("Home", ViewContext.RouteData.Values["action"].ToString())">
                        <span>
                            <i class="bi bi-house"></i>
                        </span>
                        <span>Dasboard</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="QuanTriHeThong" asp-action="Index" title="Quản trị hệ thống" class="sidebar-link @isActive("QuanTriHeThong", ViewContext.RouteData.Values["action"].ToString())">
                        <span>
                            <i class="bi bi-server"></i>
                        </span>
                        <span>Quản trị hệ thống</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="QuanLySach" asp-action="Index" title="Quản lý kho sách" class="sidebar-link @isActive("QuanLySach", ViewContext.RouteData.Values["action"].ToString())">
                        <span>
                            <i class="bi bi-book"></i>
                        </span>
                        <span>Quản lý kho sách</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="QuanLyDocGia" asp-action="Index" title="Quản lý độc giả" class="sidebar-link @isActive("QuanLyDocGia", ViewContext.RouteData.Values["action"].ToString())">
                        <span>
                            <i class="bi bi-file-person"></i>
                        </span>
                        <span>Quản lý độc giả</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="QuanLyMuonTraSach" asp-action="ViewSachMuon" title="Quản lý mượn trả sách" class="sidebar-link @isActive("QuanLyMuonTraSach", ViewContext.RouteData.Values["action"].ToString())">
                        <span>
                            <i class="bi bi-file-earmark-ruled"></i>
                        </span>
                        <span>Quản lý mượn trả sách</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="BaoCaoThongKe" asp-action="Index" title="Báo cáo thống kê" class="sidebar-link @isActive("BaoCaoThongKe", ViewContext.RouteData.Values["action"].ToString())">
                        <span>
                            <i class="bi bi-file-earmark-bar-graph"></i>
                        </span>
                        <span>Báo cáo thống kê</span>
                    </a>
                </li>

                <li>
                    <a asp-controller="Login" asp-action="Index" title="Thoát">
                        <span>
                            <i class="bi bi-box-arrow-left"></i>
                        </span>
                        <span>Thoát</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="main-content">
        <header>
            <h2 class="lv2">
                <label for="nav-toggle">
                    <span>
                        <i class="bi bi-list"></i>
                    </span>
                </label>
            </h2>
            <div class="search-wrapper">
                <span>
                    <i class="bi bi-search"></i>
                </span>
                <input type="search" placeholder="Search here" />
            </div>

            <div class="user-wrapper">
                <img src="~/Images/avatar/admin.png" alt="" width="30px" height="30px">
                <div>
                    <h4 class="lv4">@data.TenDangNhap</h4>
                    <small>@data.VaiTro</small>
                </div>
            </div>
        </header>
        @RenderBody()
        <partial name="_Notifications">
        @section Scripts {
            @{
                <partial name="_ValidationScriptsPartial" />
            }
        }
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
