<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuanLyThuVien</title>
    <link rel="stylesheet" href="~/css/bootswatch_flatly.css" />
    <link rel="stylesheet" href="~/css/Home.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
    <input type="checkbox" id="nav-toggle">
    <div class="sidebar" target="_sidebar">
        <div class="sidebar-brand">
            <a href="">
                <h2 class="lv2">
                    <img src="~/Images/logo/logo-svg.webp" class="logo" />
                    <span>EAUT Libary</span>
                </h2>
            </a>
        </div>
        <div class="sidebar-menu">
            <ul>
                <li>
                    <a href="" title="Dasboard" class="active text-primary">
                        <span>
                            <i class="bi bi-house"></i>
                        </span>
                        <span>Dasboard</span>
                    </a>
                </li>
                <li>
                    <a href="" title="Quản trị hệ thống">
                        <span>
                            <i class="bi bi-server"></i>
                        </span>
                        <span>Quản trị hệ thống</span>
                    </a>
                </li>
                <li>
                    <a href="" title="Quản lý kho sách">
                        <span>
                            <i class="bi bi-book"></i>
                        </span>
                        <span>Quản lý kho sách</span>
                    </a>
                </li>
                <li>
                    <a href="" title="Quản lý độc giả">
                        <span>
                            <i class="bi bi-file-person"></i>
                        </span>
                        <span>Quản lý độc giả</span>
                    </a>
                </li>
                <li>
                    <a href="" title="Quản lý mượn trả sách">
                        <span>
                            <i class="bi bi-file-earmark-ruled"></i>
                        </span>
                        <span>Quản lý mượn trả sách</span>
                    </a>
                </li>
                <li>
                    <a href="" title="Báo cáo thống kê">
                        <span>
                            <i class="bi bi-file-earmark-bar-graph"></i>
                        </span>
                        <span>Báo cáo thống kê</span>
                    </a>
                </li>

                <li>
                    <a asp-controller="Login" asp-action="Index" title="Thoát">
                        <span>
                            <i class="bi bi-box-arrow-left"></i>
                        </span>
                        <span>Thoát</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="main-content">
        <partial name="_Notifications">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
