
@model DocGia
@{
    ViewData["Title"] = "Edit";
}
<main>
    <form method="post" asp-controller="QuanLyDocGia" asp-action="EditPost" style="width: 50%;">
        <fieldset>
            <legend>Thêm độc giả mới</legend>
            <div class="form-group">
                <input asp-for="@Model.ID_DocGia" type="text" class="form-control" required id="IdDocGia" hidden>
            </div>
            <div class="form-group">
                <input asp-for="@Model.ID_TaiKhoan" type="text" class="form-control" required id="IdTaiKhoan" hidden>
            </div>
            <div class="form-group">
                <input asp-for="@Model.ID_The" type="text" class="form-control" required id="IdThe" hidden>
            </div>
            <div class="form-group">
                <label asp-for="@Model.TenDocGia" class="form-label mt-4">Tên độc giả</label>
                <input asp-for="@Model.TenDocGia" type="text" class="form-control" required id="TenDocGia" placeholder="Nhập tên độc giả">
            </div>
            <div class="form-group">
                <label asp-for="@Model.SoCCCD" class="form-label mt-4">Số căn cước công dân</label>
                <input asp-for="@Model.SoCCCD" class="form-control" type="text" required id="CCCD" placeholder="Nhập số căn cước công dân">
            </div>
            <div class="form-group">
                <label asp-for="@Model.GioiTinh" class="form-label mt-4">Giới tính</label>
                <input asp-for="@Model.GioiTinh" type="text" class="form-control" required id="GioiTinh" placeholder="Nhập giới tính">
            </div>
            <div class="form-group">
                <label asp-for="@Model.NgaySinh" class="form-label mt-4">Ngày sinh</label>
                <input asp-for="@Model.NgaySinh" type="date" class="form-control" required id="NgaySinh">
            </div>
            <div class="form-group">
                <label asp-for="@Model.DiaChi" class="form-label mt-4">Địa chỉ</label>
                <input asp-for="@Model.DiaChi" type="text" class="form-control" required id="DiaChi" placeholder="Nhập địa chỉ">
            </div>
            <div class="form-group">
                <label asp-for="@Model.SDT" class="form-label mt-4">Số điện thoại</label>
                <input asp-for="@Model.SDT" type="text" class="form-control" required id="SDT" placeholder="Nhập số điện thoại">
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email" class="form-label mt-4">Email</label>
                <input asp-for="@Model.Email" type="email" class="form-control" required id="Email" placeholder="Nhập email">
            </div>
            <div class="mt-3">
                <a asp-controller="QuanLyDocGia" asp-action="Index" class="btn btn-outline-primary" style="margin-right: 4px">Quay lại</a>
                <button type="submit" class="btn btn-success">Update</button>
            </div>
        </fieldset>
    </form>
</main>