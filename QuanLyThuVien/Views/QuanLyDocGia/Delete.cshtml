
@model DocGia
@{
    ViewData["Title"] = "Delete";
}

<main>
    <form method="post" asp-controller="QuanLyDocGia" asp-action="DeletePost" id="form-delete" style="width: 50%;">
        <fieldset>
            <legend>Xóa độc giả</legend>
            <div class="form-group">
                <input asp-for="@Model.ID_DocGia" type="text" name="idDocGia" class="form-control" id="IdDocGia" hidden>
            </div>
            <div class="form-group">
                <label asp-for="@Model.TenDocGia" class="form-label mt-4">Tên độc giả</label>
                <input asp-for="@Model.TenDocGia" type="text" class="form-control" id="TenDocGia" disabled="">
            </div>
            <div class="form-group">
                <label asp-for="@Model.SoCCCD" class="form-label mt-4">Số căn cước công dân</label>
                <input asp-for="@Model.SoCCCD" class="form-control" type="text" id="CCCD" disabled="">
            </div>
            <div class="form-group">
                <label asp-for="@Model.GioiTinh" class="form-label mt-4">Giới tính</label>
                <input asp-for="@Model.GioiTinh" type="text" class="form-control" id="GioiTinh" disabled="">
            </div>
            <div class="form-group">
                <label asp-for="@Model.NgaySinh" class="form-label mt-4">Ngày sinh</label>
                <input asp-for="@Model.NgaySinh" type="date" class="form-control" id="NgaySinh" disabled="">
            </div>
            <div class="form-group">
                <label asp-for="@Model.DiaChi" class="form-label mt-4">Địa chỉ</label>
                <input asp-for="@Model.DiaChi" type="text" class="form-control" id="DiaChi" disabled>
            </div>
            <div class="form-group">
                <label asp-for="@Model.SDT" class="form-label mt-4">Số điện thoại</label>
                <input asp-for="@Model.SDT" type="text" class="form-control" id="SDT" disabled="">
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email" class="form-label mt-4">Email</label>
                <input asp-for="@Model.Email" type="email" class="form-control" id="Email" disabled="">
            </div>
            <div class="mt-3">
                <a asp-controller="QuanLyDocGia" asp-action="Index" class="btn btn-outline-primary" style="margin-right: 4px">Quay lại</a>
                <button type="button" onclick="handleSubmitForm()" class="btn btn-outline-danger">Delete</button>
            </div>
        </fieldset>
    </form>

    <div class="modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Thông báo</h5>
                    <button type="button" class="btn-close" value="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true"></span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc chắn muốn xóa?</p>
                </div>
                <div class="modal-footer">
                    <button type="submit" value="submit" class="btn btn-danger">Yes</button>
                    <button type="button" class="btn btn-secondary" value="close" data-bs-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>
</main>