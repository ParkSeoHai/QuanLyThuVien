@model IQueryable<DocGia>
@{
    ViewData["Title"] = "Index";
}

<main>
    <h2 class="lv2">Danh sách độc giả</h2>
    <div class="text-start" style="margin: 12px 0;">
        <a asp-controller="QuanLyDocGia" asp-action="Create" class="btn btn-outline-primary">
            <i class="bi bi-plus-circle"></i>&nbsp; Tạo mới
        </a>
    </div>
    <table class="table table-hover">
        <thead>
            <tr class="table-primary">
                <th scope="col">Id</th>
                <th scope="col">Tên độc giả</th>
                <th scope="col">Giới tính</th>
                <th scope="col">Địa chỉ</th>
                <th scope="col">Số điện thoại</th>
                <th scope="col">Email</th>
                <th scope="col">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.ID_DocGia</th>
                    <td>@item.TenDocGia</td>
                    <td>@item.GioiTinh</td>
                    <td>@item.DiaChi</td>
                    <td>@item.SDT</td>
                    <td>@item.Email</td>
                    <td>
                        <a asp-controller="QuanLyDocGia" asp-action="ViewEdit" asp-route-id="@item.ID_DocGia" class="btn btn-outline-primary" title="Sửa">
                            <i class="bi bi-gear"></i>
                        </a>
                        <a asp-controller="QuanLyDocGia" asp-action="Delete" asp-route-id="@item.ID_DocGia" class="btn btn-outline-danger" style="margin: 0 8px;" title="Xóa">
                            <i class="bi bi-trash3"></i>
                        </a>
                        <a asp-controller="QuanLyDocGia" asp-action="Details" asp-route-id="@item.ID_DocGia" class="btn btn-outline-primary" title="Xem chi tiết">
                            <i class="bi bi-info-circle"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</main>